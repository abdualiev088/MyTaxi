<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="37.7749"
        mapbox:mapbox_cameraTargetLng="-122.4194"
        mapbox:mapbox_cameraZoom="16.0" />

    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintLeft_toLeftOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/burger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:elevation="30dp"
            app:cardCornerRadius="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/dehaze" />

        </androidx.cardview.widget.CardView>

        <RadioGroup

            android:id="@+id/radioGroup2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="0"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@+id/notification"
            app:layout_constraintStart_toEndOf="@+id/burger"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/notAval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_buttom"
                android:button="@drawable/status"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/paddingRadioBtn"
                android:text="Свободен"
                android:textColor="@drawable/toggle_text_color" />

            <RadioButton
                android:id="@+id/aval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_buttom"
                android:button="@drawable/status"
                android:gravity="center"
                android:padding="@dimen/paddingRadioBtn"
                android:text="Занят"
                android:textColor="@drawable/toggle_text_color" />
        </RadioGroup>

        <androidx.cardview.widget.CardView
            android:id="@+id/notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:backgroundTint="@color/white"
            android:elevation="30dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:paddingEnd="10dp">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/notifications" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:padding="18dp"
        android:gravity="center|bottom"
        android:layout_width="12dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingHorizontal="@dimen/paddingBetweenBtns"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                android:layout_width="@dimen/btnSize"
                android:layout_height="@dimen/btnSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/btn_gradient"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/checklist"
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="Заказы"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/paddingBetweenBtns"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonStart"
                app:cardCornerRadius="100dp"
                android:layout_width="@dimen/btnSize"
                android:layout_height="@dimen/btnSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/btn_gradient"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_add_road_24"
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="Бордюр"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/paddingBetweenBtns"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonStop"
                app:cardCornerRadius="100dp"
                android:layout_width="@dimen/btnSize"
                android:layout_height="@dimen/btnSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/btn_gradient"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_auto_awesome_24"
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="Тарифы"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clipToPadding="false"
        app:headerLayout="@layout/header"
        app:menu="@menu/nav_menu"
        tools:visibility="gone" />

</androidx.drawerlayout.widget.DrawerLayout>